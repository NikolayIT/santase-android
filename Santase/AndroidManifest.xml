<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.karamanov.santase"
    android:installLocation="preferExternal"
    android:versionCode="12"
    android:versionName="1.12" >

    <uses-sdk android:minSdkVersion="8" 
              android:targetSdkVersion="10" />

    <application
        android:name=".Santase"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/SantaseNoTitleTheme">

        <activity
            android:name=".screen.logo.LogoActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screen.main.SantaseActivity"
            android:configChanges="orientation"
            android:label="@string/app_name" />
        <activity
            android:name=".screen.tricks.TricksActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".screen.pref.SantasePreferencesActivity"
            android:label="@string/app_name" />
    </application>

</manifest>